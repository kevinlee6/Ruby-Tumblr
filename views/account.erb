<form class="account-form" action="/account/password" method="post">
  <h5>Change Password</h5>
  <input placeholder="Current Password" type="password">
  <input placeholder="New Password" type="password">
  <input placeholder="Enter new password again" type="password">
  <input class="account-form-btn btn btn-info" type="submit" value="Change password">
</form>

<form class="account-form" action="/account/delete" method="post">
  <h5>Delete account</h5>
  <p>
    Deleting your account is a <span style="color:red">permanent</span> action.
    Enter your e-mail and password if you are sure you want to delete your account.
  </p>
  <input type="text" placeholder="Email">
  <input type="password" placeholder="Password">
  <input type="submit" class="account-form-btn btn-danger" value="Delete account">
</form>